{
  "name": "react-shadow",
  "version": "16.3.1",
  "description": "Utilise Shadow DOM in React with all the benefits of style encapsulation.",
  "main": "dist/react-shadow.js",
  "scripts": {
    "start": "babel example/server/default.js | node",
    "build": "webpack && npm run example",
    "watch": "webpack --config webpack.dev-config.js --watch",
    "example": "webpack --config webpack.dev-config.js",
    "test": "npm run spec && npm run lint",
    "spec": "nyc ava && npm run report",
    "lint": "xo src/*",
    "report": "nyc report --reporter=html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Wildhoney/ReactShadow.git"
  },
  "keywords": [
    "react shadow dom",
    "react shadow boundary",
    "react template",
    "react webcomponents",
    "react web components",
    "react encapsulation"
  ],
  "author": "Adam Timberlake <adam.timberlake@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Wildhoney/ReactShadow/issues"
  },
  "homepage": "https://github.com/Wildhoney/ReactShadow",
  "peerDependencies": {
    "react": ">=0.14.7 <=16.x",
    "react-dom": ">=0.14.7 <=16.x"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.5",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-do-expressions": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "ava": "~0.23.0",
    "axios": "^0.14.0",
    "axios-mock-adapter": "^1.6.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-ramda": "1.6.3",
    "browser-env": "~3.2.1",
    "capitalize": "^1.0.0",
    "coveralls": "~2.13.0",
    "delay": "~2.0.0",
    "document-ready-promise": "^3.0.1",
    "enzyme": "~3.2.0",
    "enzyme-adapter-react-16": "~1.1.0",
    "eslint-config-xo-react": "^0.9.0",
    "eslint-plugin-react": "^6.2.0",
    "eslint-plugin-xo": "^0.5.1",
    "express": "^4.11.2",
    "humps": "~2.0.0",
    "jasmine-core": "^2.2.0",
    "jsdom": "~11.3.0",
    "nyc": "~10.2.0",
    "prop-types": "~15.6.0",
    "ramda": "^0.22.1",
    "react": "~16.1.0",
    "react-addons-test-utils": "~15.6.0",
    "react-document-title": "~2.0.3",
    "react-dom": "~16.1.0",
    "react-redux": "~5.0.3",
    "react-router": "~4.2.0",
    "react-router-dom": "~4.1.2",
    "react-thunk": "~1.0.0",
    "redux": "~3.6.0",
    "redux-thunk": "~2.2.0",
    "sinon": "^1.17.5",
    "webcomponents.js": "~0.7.24",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "xo": "^0.16.0"
  },
  "ava": {
    "files": [
      "tests/*.test.js"
    ],
    "babel": "inherit",
    "require": [
      "babel-register",
      "babel-polyfill",
      "./tests/helpers/browser-env.js",
      "./tests/helpers/enzyme.js"
    ]
  },
  "xo": {
    "space": 4,
    "esnext": true,
    "globals": [
      "window",
      "document"
    ],
    "extends": "xo-react",
    "rules": {
      "padded-blocks": "off",
      "max-lines": [
        2,
        500
      ],
      "babel/object-curly-spacing": [
        2,
        "always"
      ],
      "babel/array-bracket-spacing": "off",
      "no-unused-vars": [
        1
      ],
      "max-nested-callbacks": [
        1,
        5
      ],
      "key-spacing": "off",
      "default-case": "off",
      "no-multi-spaces": "off",
      "no-unused-expressions": "off",
      "no-case-declarations": "off",
      "import/no-named-as-default": "off",
      "react/jsx-indent": "off",
      "react/jsx-space-before-closing": "off",
      "react/no-danger": "off",
      "react/jsx-no-bind": "off",
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    }
  }
}
